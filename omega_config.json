{
  "platform": {
    "name": "Project Omega",
    "version": "0.1.0-alpha",
    "architecture": "distributed_microservices",
    "quantum_resistant": true,
    "default_encryption": "XChaCha20-Poly1305",
    "post_quantum_algorithms": ["Kyber", "Dilithium"]
  },
  "crypto": {
    "quantum_resistant": true,
    "default_algorithm": "XChaCha20-Poly1305",
    "key_size": 256,
    "post_quantum_backup": true
  },
  "intelligence_layer": {
    "predictive_modeling": true,
    "threat_intel_sharing": true,
    "anonymization_level": "high",
    "global_learning": true,
    "local_inference": true
  },
  "distribution": {
    "supported_platforms": ["android_termux", "linux_arm", "linux_x86", "docker", "kubernetes"],
    "message_bus": "mqtt_websocket",
    "data_sync": "crdt",
    "offline_capable": true
  },
  "autonomous": {
    "security_levels": ["SAFE", "MONITOR", "DEFEND", "COUNTER", "AUTONOMOUS"],
    "requires_approval": ["COUNTER", "AUTONOMOUS"],
    "max_autonomous_actions": 5
  },
  "mobile": {
    "optimization_profiles": ["battery_saver", "normal", "performance"],
    "thermal_threshold": 70,
    "battery_threshold": 20
  }
}
